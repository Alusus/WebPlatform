اشمل "WebPlatform.alusus"؛

عرف مـنصة_ويب: لقب WebPlatform؛
@دمج وحدة مـنصة_ويب {
    عرف حدد_المشهد: لقب setView؛
    عرف حدد_ميزة_عنصر: لقب setElementAttribute؛

    عرف حدد_نمط_الملء: لقب setFillStyle؛
    عرف ارسم_خط: لقب drawLine؛
    عرف ارسم_مضلع: لقب drawPolygon؛
    عرف ارسم_كتابة: لقب drawText؛
    عرف ارسم_دائرة: لقب drawCircle؛

    عرف نفذ_حلقة_معالجة_الأحداث: لقب runEventLoop؛
    عرف شغل_الخادم: لقب runServer؛
    عرف ابدأ_المؤقت: لقب startTimer؛
    عرف أرسل_نداء: لقب sendRequest؛

    عرف لـون: لقب Color؛
    عرف ربـاعية: لقب Quad؛

    ماكرو عرب_خصلة[اسم، name] {
        عرف هات__اسم__: لقب get__name__؛
        عرف حدد__اسم__: لقب set__name__؛
    }

    عرف إشـارة: لقب Signal؛
    @دمج صنف إشـارة {
        عرف اربط: لقب connect؛
        عرف افصل: لقب disconnect؛
        عرف هات_عدد_الروابط: لقب getConnectionCount؛
    }

    عرف ودجـة: لقب Widget؛
    @دمج صنف ودجـة {
        عرف معرف: لقب id؛
        عرف العرض: لقب width؛
        عرف الطول: لقب height؛
        عرف لون_الخلفية: لقب backgroundColor؛
        عرب_خصلة[_العرض، Width]؛
        عرب_خصلة[_الطول، Height]؛
        عرب_خصلة[_لون_الخلفية، BackgroundColor]؛
    }

    عرف صـندوق : لقب Box؛
    @دمج صنف صـندوق {
        عرف أنشى: لقب new؛
        عرف فروع: لقب children؛
        عرف أضف_فروع: لقب addChildren؛
        عرف أزل_فروع: لقب removeChildren؛
        عرف الحشوة: لقب padding؛
        عرف الإطار: لقب border؛
        عرف لون_الإطار: لقب borderColor؛
        عرف النسق: لقب layout؛
        عرف ملء_السطر: لقب justify؛
        عرف الاتجاه: لقب direction؛
        عرب_خصلة[_الحشوة، Padding]؛
        عرب_خصلة[_الإطار، Border]؛
        عرب_خصلة[_لون_الإطار، BorderColor]؛
        عرب_خصلة[_النسق، Layout]؛
        عرب_خصلة[_ملء_السطر، Justify]؛
        عرب_خصلة[_الاتجاه، Direction]؛
    }

    عرف ارتـباط_تشعبي: لقب Hyperlink؛
    @دمج صنف ارتـباط_تشعبي {
        عرف أنشئ: لقب new؛
        عرف فرع: لقب child؛
        عرف حدد_الفرع: لقب setChild؛
        عرف العنوان: لقب url؛
        عرب_خصلة[_عنوان، Url]؛
    }

    عرف لـوحة: لقب Canvas؛
    @دمج صنف لـوحة {
        عرف معرف_مورد: لقب resourceId؛
        عرف أنشئ: لقب new؛
        عرف الحشوة: لقب padding؛
        عرف الإطار: لقب border؛
        عرف لون_الإطار: لقب borderColor؛
        عرف النسق: لقب layout؛
        عرف ملء_السطر: لقب justify؛
        عرف الاتجاه: لقب direction؛
