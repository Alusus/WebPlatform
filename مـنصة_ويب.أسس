اشمل "WebPlatform.alusus"؛

عرف مـنصة_ويب: لقب WebPlatform؛
@دمج وحدة مـنصة_ويب {
    عرف حدد_ميزة_عنصر: لقب setElementAttribute؛

    عرف نفذ_حلقة_معالجة_الأحداث: لقب runEventLoop؛
    عرف انتظر: لقب await؛
    عرف شغل_الخادم: لقب runServer؛
    عرف ابدأ_المؤقت: لقب startTimer؛
    عرف أرسل_نداء: لقب sendRequest؛
    عرف حمل_خط: لقب loadFont؛

    عرف لـون: لقب Color؛
    عرف ربـاعية: لقب Quad؛
    عرف حـمولة_تحريك_المؤشر: لقب MouseMovePayload؛
    @دمج صنف حـمولة_تحريك_المؤشر {
        عرف موقع_س: لقب posX؛
        عرف موقع_ص: لقب posY؛
        عرف إزاحة_س: لقب movementX؛
        عرف إزاحة_ص: لقب movementY؛
    }

    ماكرو عرب_خصلة[اسم، name] {
        عرف هات__اسم__: لقب get__name__؛
        عرف حدد__اسم__: لقب set__name__؛
    }

    عرف إشـارة: لقب Signal؛
    @دمج صنف إشـارة {
        عرف اربط: لقب connect؛
        عرف افصل: لقب disconnect؛
        عرف هات_عدد_الروابط: لقب getConnectionCount؛
    }

    //==========================================================================
    // ودجات

    عرف ودجـة: لقب Widget؛
    @دمج صنف ودجـة {
        عرف معرف: لقب id؛
        عرف العرض: لقب width؛
        عرف الطول: لقب height؛
        عرف لون_الخلفية: لقب backgroundColor؛
        عرب_خصلة[_العرض، Width]؛
        عرب_خصلة[_الطول، Height]؛
        عرب_خصلة[_لون_الخلفية، BackgroundColor]؛
    }

    عرف صـندوق : لقب Box؛
    @دمج صنف صـندوق {
        عرف أنشئ: لقب new؛
        عرف فروع: لقب children؛
        عرف أضف_فروع: لقب addChildren؛
        عرف أزل_فروع: لقب removeChildren؛
        عرف الحشوة: لقب padding؛
        عرف الإطار: لقب border؛
        عرف لون_الإطار: لقب borderColor؛
        عرف النسق: لقب layout؛
        عرف ملء_السطر: لقب justify؛
        عرف محاذاة: لقب align؛
        عرف الاتجاه: لقب direction؛
        عرب_خصلة[_الحشوة، Padding]؛
        عرب_خصلة[_الإطار، Border]؛
        عرب_خصلة[_لون_الإطار، BorderColor]؛
        عرب_خصلة[_النسق، Layout]؛
        عرب_خصلة[_ملء_السطر، Justify]؛
        عرب_خصلة[_المحاذاة، Align]؛
        عرب_خصلة[_الاتجاه، Direction]؛
    }

    عرف مـرسم: لقب Canvas؛
    @دمج صنف مـرسم {
        عرف معرف_مورد: لقب resourceId؛
        عرف أنشئ: لقب new؛
        عرف عرض_الصورة: لقب bitmapWidth؛
        عرف طول_الصورة: لقب bitmapHeight؛
        عرف الحشوة: لقب padding؛
        عرف الإطار: لقب border؛
        عرف لون_الإطار: لقب borderColor؛
        عرب_خصلة[_عرض_الصورة، BitmapWidth]؛
        عرب_خصلة[_طول_الصورة، BitmapHeight]؛
        عرب_خصلة[_الحشوة، Padding]؛
        عرب_خصلة[_الإطار، Border]؛
        عرب_خصلة[_لون_الإطار، BorderColor]؛
        عرف عند_تحريك_المؤشر: لقب onMouseMove؛
    }

    عرف صـورة: لقب Image؛
    @دمج صنف صـورة {
        عرف أنشئ: لقب new؛
        عرف الرابط: لقب url؛
        عرف الحشوة: لقب padding؛
        عرف الإطار: لقب border؛
        عرف لون_الإطار: لقب borderColor؛
        عرب_خصلة[_الرابط، Url]؛
        عرب_خصلة[_الحشوة، Padding]؛
        عرب_خصلة[_الإطار، Border]؛
        عرب_خصلة[_لون_الإطار، BorderColor]؛
    }

    عرف عـنوان: لقب Label؛
    @دمج صنف عـنوان {
        عرف أنشئ: لقب new؛
        عرف النص: لقب text؛
        عرف الحشوة: لقب padding؛
        عرف حجم_الخط: لقب fontSize؛
        عرف لون_الخط: لقب fontColor؛
        عرف محاذاة_النص: لقب textAlign؛
        عرف اتجاه_النص: لقب textDirection؛
        عرب_خصلة[_النص، Text]؛
        عرب_خصلة[_الحشوة، Padding]؛
        عرب_خصلة[_حجم_الخط، FontSize]؛
        عرب_خصلة[_لون_الخط، FontColor]؛
        عرب_خصلة[_محاذاة_النص، TextAlign]؛
        عرب_خصلة[_اتجاه_النص، TextDirection]؛
    }

    عرف الـزر: لقب Button؛
    @دمج صنف الـزر {
        عرف أنشئ: لقب new؛
        عرف النص: لقب text؛
        عرف حجم_الخط: لقب fontSize؛
        عرف لون_الخط: لقب fontColor؛
        عرف محاذاة_النص: لقب textAlign؛
        عرف اتجاه_النص: لقب textDirection؛
        عرب_خصلة[_نص، Text]؛
        عرب_خصلة[_حجم_الخط، FontSize]؛
        عرب_خصلة[_لون_الخط، FontColor]؛
        عرب_خصلة[_محاذاة_النص، TextAlign]؛
        عرب_خصلة[_اتجاه_النص، TextDirection]؛
        عرف عند_الضغط: لقب onClick؛
    }

    عرف مـدخل_نص: لقب TextInput؛
    @دمج صنف مـدخل_نص {
        عرف أنشئ: لقب new؛
        عرف حجم_الخط: لقب fontSize؛
        عرف لون_الخط: لقب fontColor؛
        عرف محاذاة_النص: لقب textAlign؛
        عرف اتجاه_النص: لقب textDirection؛
        عرب_خصلة[_حجم_الخط، FontSize]؛
        عرب_خصلة[_لون_الخط، FontColor]؛
        عرب_خصلة[_محاذاة_النص، TextAlign]؛
        عرب_خصلة[_اتجاه_النص، TextDirection]؛
        عرف عند_الغيير: لقب onChanged؛
        عرف عند_كبس_مفتاح: لقب onKeyPress؛
        عرف عند_انتهاء_الكبسة: لقب onKeyUp؛
        عرف هات_النص: لقب getText؛
        عرف حدد_النص: لقب setText؛
    }

    عرف ارتـباط_تشعبي: لقب Hyperlink؛
    @دمج صنف ارتـباط_تشعبي {
        عرف أنشئ: لقب new؛
        عرف فرع: لقب child؛
        عرف حدد_الفرع: لقب setChild؛
        عرف العنوان: لقب url؛
        عرب_خصلة[_عنوان، Url]؛
    }

    //==========================================================================
    // موارد

    عرف مـورد_صورة: لقب ImageResource؛
    @دمج صنف مـورد_صورة {
        عرف حمل: لقب load؛
        عرف هيئ_من_مرسم: لقب initFromCanvas؛
    }

    عرف مـورد_مرسم: لقب CanvasResource؛

    عرف مـورد_صوت: لقب AudioResource؛
    @دمج صنف مـورد_صوت {
        عرف حمل: لقب load؛
        عرف شغل: لقب play؛
        عرف أوقف: لقب stop؛
    }

    //==========================================================================
    // وسائط

    عرف رسـم: لقب Drawing؛
    @دمج صنف رسـم {
        عرف ارسم_خط: لقب drawLine؛
        عرف ارسم_مضلع: لقب drawPolygon؛
        عرف ارسم_دائرة: لقب drawCircle؛
        عرف ارسم_كتابة: لقب drawText؛
        عرف حدد_نمط_الملء: لقب setFillStyle؛
        عرف حدد_نمط_القلم: لقب setStrokeStyle؛
        عرف حدد_عرض_القلم: لقب setLineWidth؛
        عرف ارسم_صورة: لقب drawImage؛
        عرف فرغ: لقب clear؛
    }

    //==========================================================================
    // وسائط

    عرف نـافذة: لقب Window؛
    @دمج صنف نـافذة {
        عرف النموذج: لقب instance؛
        عرف حدد_المشهد: لقب setView؛
        عرف أزل_المشهد: لقب unsetView؛
        عرف المفاتيح_المكبوتة: لقب keysToSwallow؛
        عرف عند_بدء_الكبسة: لقب onKeyDown؛
        عرف عند_انتهاء_الكبسة: لقب onKeyUp؛
    }
}

