صنف كـبسة_القائمة {
    @حقنة عرف مركب: مـركب؛

    عملية هذا~هيئ(رابط: نـص, عنوان: نـص) {
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                النسق = نـسق._سطر_؛
                المحاذاة = مـحاذاة._وسط_؛
                محاذاة_النص = مـحاذاة_نص._وسط_؛
                العرض = مـسافة.نقاط(60)؛
                المؤشر = مـؤشر._سبابة_؛
                انتقال_التحول = انـتقال(0.3)؛
            }؛
            الطراز(">عنوان").{
                حجم_الخط = مـسافة.نقاط(14.0)؛
                لون_الخط = لـون("444")؛
            }
            الطراز({ مـحدد_حالة._حوم_ }).{
                التحول = تـحول.حجم(1.3)؛
            }
            الطراز({ مـحدد_حالة._حوم_, ">عنوان" }).{
                حجم_الخط = مـسافة.نقاط(14.0)؛
                لون_الخط = لـون("000")؛
            }
            عند_الضغط.اربط(مغلفة (ودجة: سند[ودجـة], حمولة: سند[صـحيح]) {
                نـافذة.النموذج.ادفع_مسارا(رابط)؛
            })؛
            أضف_فروع({
                كـتابة(عنوان).{
                    اسم_الفئة = نـص("عنوان")
                }
            })؛
        }؛
    }

    عملية هذا_الصنف(رابط: نـص, عنوان: نـص): سـندنا[كـبسة_القائمة] {
        أرجع سـندنا[كـبسة_القائمة]().{ احجز()~هيئ(رابط, عنوان) }؛
    }
}

صنف كـبسة_جانبية {
    @حقنة عرف مركب: مـركب؛
    عرف عند_نقر_الكبسة: مغلفة()؛

    عملية هذا~هيئ(عنوان: نـص) {
        عرف هذا_الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                المحاذاة = مـحاذاة._وسط_؛
                المؤشر = مـؤشر._سبابة_؛
                العرض = مـسافة.نقاط(40)؛
                محاذاة_النص = مـحاذاة_نص._وسط_؛
            }؛
            الطراز(">عنوان").{
                حجم_الخط = مـسافة.نقاط(14.0)؛
                لون_الخط = لـون("444")؛
            }
            الطراز({ مـحدد_حالة._حوم_, ">عنوان" }).{
                حجم_الخط = مـسافة.نقاط(14.0)؛
                لون_الخط = لـون("000")؛
            }
            عند_الضغط.اربط(مغلفة (ودجة: سند[ودجـة], حمولة: سند[صـحيح]) {
                هذا_الكائن.عند_نقر_الكبسة()؛
            })؛
            أضف_فروع({
                كـتابة(عنوان).{
                    اسم_الفئة = نـص("عنوان")
                }
            })؛
        }؛
    }

    عملية هذا_الصنف(عنوان: نـص): سـندنا[كـبسة_جانبية] {
        أرجع سـندنا[كـبسة_جانبية]().{ احجز()~هيئ(عنوان) }؛
    }
}

صنف الـترويسة {
    @حقنة عرف مركب: مـركب؛
    عرف الدليل: سـندنا[صـندوق]؛

    عملية هذا~هيئ() {
        عرف هذا_الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.نقاط(85)؛
                الحشوة = مـسافة4.نقاط(4, 0, 0, 0)؛
                سمك_الإطار = مـسافة4.نقاط(0، 0، 3، 0)؛
                طراز_الإطار = طـراز_إطار._مستمر_؛
                لون_الإطار = لـون("666")؛
                ملء_السطر = مـلء_سطر._مسافة_بينية_؛
                المحاذاة = مـحاذاة._وسط_؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._عمود_؛
            }؛
            عرف ع: صـحيح؛
            لكل ع = 0, ع < 3, ++ع {
                الطراز(نـص(">>الدليل")+ع).{
                    العرض = مـسافة.نقاط(60)؛
                    الطول = مـسافة.نقاط(3)؛
                    الخلفية = خـلفية(لـون(0, 0, 150))؛
                    التحول = تـحول.أزح(مـسافة.نقاط(-ع * 60)، مـسافة.نقاط(0))؛
                    انتقال_التحول = انـتقال(0.5)؛
                }؛
            }

            أضف_فروع({
                صـندوق({}).{
                    الطراز.{
                        الإظهار = إظـهار._مرن_؛
                        النسق = نـسق._سطر_؛
                        ملء_السطر = مـلء_سطر._مسافة_بينية_؛
                        المحاذاة = مـحاذاة._وسط_؛
                    }؛
                    أضف_فروع({
                        صـورة().{
                            الرابط = نـص("/Assets/wblogo.svg")؛
                            الطراز.{
                                الطول = مـسافة.نقاط(50)؛
                                الحشوة = مـسافة4.نقاط(0, 10)؛
                            }؛
                        },
                        صـندوق({ كـتابة(نـص("مثال منصة ويب الأسس")).{ الطراز.{
                            لون_الخط = لـون("000")؛
                            حجم_الخط = مـسافة.نقاط(21.0)؛
                            الطول = مـسافة.مئوي(100)؛
                            الحشوة = مـسافة4.نقاط(0, 10)؛
                        } } })
                    })؛
                },
                صـندوق({}).{
                    الطراز.{
                        الإظهار = إظـهار._مرن_؛
                        النسق = نـسق._سطر_؛
                        ملء_السطر = مـلء_سطر._وسط_؛
                    }؛
                    أضف_فروع({
                        كـبسة_القائمة(نـص("/one"), نـص("واحد")),
                        كـبسة_القائمة(نـص("/two"), نـص("اثنان")),
                        كـبسة_القائمة(نـص("/three"), نـص("ثلاثة"))
                    })؛
                },
                صـندوق({}).{
                    الطراز.{
                        الإظهار = إظـهار._مرن_؛
                        النسق = نـسق._سطر_؛
                        ملء_السطر = مـلء_سطر._بداية_؛
                        العرض = مـسافة.نقاط(180)؛
                        الحشوة = مـسافة4.نقاط(0, 0, 4, 0)؛
                    }؛
                    أضف_فروع({
                        صـندوق({}).{
                            هذا_الكائن.الدليل = هذا؛
                        }
                    })؛
                }
            })؛
        }؛
    }

    عملية هذا.حدث_الدليل(ع: صـحيح) {
        هذا.الدليل.اسم_الفئة = نـص("الدليل") + ع؛
    }

    عملية هذا_الصنف(): سـندنا[الـترويسة] {
        أرجع سـندنا[الـترويسة].أنشئ()؛
    }
}

عرف النص: نـص(لوريم)؛

صنف صـفحة_نصية {
    @حقنة عرف مركب: مـركب؛
    عرف مشهد_وثيقة: سـندنا[مـشهد_وثيقة]؛

    عملية هذا~هيئ() {
        عرف الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                المحاذاة = مـحاذاة._نهاية_؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._عمود_؛
                الطول = مـسافة.مئوي(100)؛
                الفيض_ص = فـيض._تمرير_؛
            }؛
            أضف_فروع({
                كـبسة_جانبية(نـص("🖉")).{
                    عند_نقر_الكبسة = مغلفة() {
                        نـافذة.النموذج.ادفع_مسارا("/three/edit")؛
                    }
                },
                مـشهد_وثيقة().{
                    الكائن.مشهد_وثيقة = هذا؛
                    الطراز.{
                        العرض = مـسافة.مئوي(100)؛
                        لون_الخط = لـون(0, 0, 0)؛
                        حجم_الخط = مـسافة.نقاط(20.0)؛
                    }؛
                    حدد_ماركداون(النص)؛
                }
            })؛
        }؛
    }

    عملية هذا_الصنف(): سـندنا[صـفحة_نصية] {
        أرجع سـندنا[صـفحة_نصية].أنشئ()؛
    }
}

صنف مـحرر_نصي {
    @حقنة عرف مركب: مـركب؛
    عرف مدخل_نص: سـندنا[مـدخل_نص]؛
    عرف عند_التحديث: مغلفة(نـص)؛

    عملية هذا~هيئ(نص: نـص) {
        عرف الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.مئوي(100)؛
                المحاذاة = مـحاذاة._نهاية_؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._عمود_؛
                الخلفية = خـلفية(لـون("fff"))؛
            }؛
            أضف_فروع({
                كـبسة_جانبية(نـص("💾")).{ عند_نقر_الكبسة = مغلفة() {
                    الكائن.عند_التحديث(الكائن.مدخل_نص.النص)؛
                } },
                مـدخل_نص().{
                    الطراز.{
                        العرض = مـسافة.مئوي(100)؛
                        الطول = مـسافة.مئوي(100)؛
                        حجم_الخط = مـسافة.نقاط(20.0)؛
                    }؛
                    النص = نص؛
                    الكائن.مدخل_نص = هذا؛
                },
            })؛
        }؛
    }

    عملية هذا_الصنف(ن: نـص): سـندنا[مـحرر_نصي] {
        أرجع سـندنا[مـحرر_نصي]().{ احجز()~هيئ(ن) }؛
    }
}

صنف مـشهد_نصي {
    @حقنة عرف مركب: مـركب؛
    عرف صفحة_نصية: سـندنا[صـفحة_نصية]؛

    عملية هذا~هيئ() {
        عرف الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = مـكداس_توجيه().{
            الطراز.{
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.مئوي(100)؛
            }؛
            حدد_الانتقال(
                أنشئ_انتقال_انزلاق_مكداس(0.5, 1, 0)،
                أنشئ_انتقال_انزلاق_مكداس(0.5, 1, 1)
            )؛
            مسار(نـص("^/three")) = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                الكائن.صفحة_نصية = صـفحة_نصية()؛
                أرجع الكائن.صفحة_نصية؛
            }؛
            مسار(نـص("^/three/edit")) = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                أرجع مـحرر_نصي(النص).{
                    هذا.عند_التحديث = مغلفة(ن: نـص) {
                        النص = ن؛
                        الكائن.صفحة_نصية.مشهد_وثيقة.حدد_ماركداون(النص)؛
                        نـافذة.النموذج.ادفع_مسارا("/three")؛
                    }
                }؛
            }؛
        }؛
    }

    عملية هذا_الصنف(): سـندنا[مـشهد_نصي] {
        أرجع سـندنا[مـشهد_نصي].أنشئ()؛
    }
}

