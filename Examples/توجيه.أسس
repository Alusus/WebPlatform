صنف مـشهد_عدد {
    @حقنة عرف مركب: مـركب؛

    عملية هذا~هيئ(عنوان: نـص) {
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.مئوي(100)؛
                الإظهار = إظـهار._مرن_؛
                المحاذاة = مـحاذاة._وسط_؛
                ملء_السطر = مـلء_سطر._وسط_؛
            }؛
            أضف_فروع({
                صـندوق({}).{
                    الطراز.{
                        العرض = مـسافة.مئوي(90)؛
                        الطول = مـسافة.مئوي(90)؛
                        نصف_قطر_الإطار = مـسافة4.نقاط(30)؛
                        لون_الإطار = لـون("444")؛
                        طراز_الإطار = طـراز_إطار._مستمر_؛
                        سمك_الإطار = مـسافة4.نقاط(10)؛
                        الإظهار = إظـهار._مرن_؛
                        المحاذاة = مـحاذاة._وسط_؛
                        ملء_السطر = مـلء_سطر._وسط_؛
                    }؛
                    أضف_فروع({
                        كـتابة(عنوان).{
                            الطراز.{
                                لون_الخط = لـون(0, 0, 0)؛
                                حجم_الخط = مـسافة.نقاط(250.0)؛
                            }
                        }
                    })؛
                }
            })؛
        }؛
    }

    عملية هذا_الصنف(عنوان: نـص): سـندنا[مـشهد_عدد] {
        أرجع سـندنا[مـشهد_عدد]().{ احجز()~هيئ(عنوان) }؛
    }
}

صنف مـشهد_عداد {
    @حقنة عرف مركب: مـركب؛
    @مشترك عرف العدد_الحالي: صـحيح؛
    عرف مبدال: سـندنا[مـبدال]؛

    عملية هذا~هيئ() {
        عرف هذا_الكائن: سند[هذا_الصنف](هذا)؛
        هذا.المشهد = صـندوق({}).{
            الطراز.{
                العرض = مـسافة.مئوي(100)؛
                الطول = مـسافة.مئوي(100)؛
                الإظهار = إظـهار._مرن_؛
                النسق = نـسق._سطر_؛
            }؛
            أضف_فروع({
                صـندوق({}).{
                    الطراز.{
                        النسق = نـسق._عمود_؛
                        الخلفية = خـلفية(لـون("eee"))؛
                    }؛
                    أضف_فروع({
                        كـبسة_جانبية(نـص("-")).{ عند_نقر_الكبسة = مغلفة() {
                            هذا_الكائن.مبدال.بدل_إلى(مـشهد_عدد(نـص() + (--العدد_الحالي)), نـص("للخلف"))؛
                        } },
                        كـبسة_جانبية(نـص("+")).{ عند_نقر_الكبسة = مغلفة() {
                            هذا_الكائن.مبدال.بدل_إلى(مـشهد_عدد(نـص() + (++العدد_الحالي)), نـص("للأمام"))؛
                        } }
                    })؛
                },
                صـندوق({}).{
                    الطراز.{
                        المرونة = مـرونة(1، 1)؛
                    }؛
                    أضف_فروع({
                        مـبدال().{
                            الطراز.{
                                المرونة = مـرونة(1، 1)؛
                                الطول = مـسافة.نقاط(500)؛
                            }؛
                            حدد_الانتقال(نـص("للأمام"), أنشئ_انتقال_انزلاق_مبدال(0.5, 1، 0))؛
                            حدد_الانتقال(نـص("للخلف"), أنشئ_انتقال_انزلاق_مبدال(0.5, 1، 1))؛
                            بدل_إلى(مـشهد_عدد(نـص() + العدد_الحالي))؛
                            هذا_الكائن.مبدال = هذا؛
                        }
                    })؛
                }
            })؛
        }
    }

    عملية هذا_الصنف(): سـندنا[مـشهد_عداد] {
        أرجع سـندنا[مـشهد_عداد].أنشئ()؛
    }
}

//==============================================================================
// صـفحات واجهة المستخدم

@منفذ_مرئي["/*"]
@عنوان["مثال منصة الويب"]
دالة رئيسي {
    حمل_خط("AlususMono"، "/Assets/AlususMono.otf")؛

    عرف ترويسة: سـندنا[الـترويسة]؛
    نـافذة.النموذج.الطراز.{
        الهامش = مـسافة4.نقاط(0)؛
        الحشوة = مـسافة4.نقاط(0)؛
    }؛
    نـافذة.النموذج.حدد_المشهد(صـندوق({}).{
        الطراز.{
            الإظهار = إظـهار._مرن_؛
            النسق = نـسق._عمود_؛
            المحاذاة = مـحاذاة._وسط_؛
            الاتجاه = اتـجاه._من_اليمين_؛
            فئة_الخط = "AlususMono"؛
        }؛
        أضف_فروع({
            الـترويسة().{ ترويسة = هذا },
            مـبدال_توجيه().{
                الطراز.{
                    العرض = مـسافة.مئوي(100)؛
                    أقصى_عرض = مـسافة.نقاط(600)؛
                    أدنى_طول = مـسافة.نقاط(500)؛
                }؛
                حدد_الانتقال(
                    أنشئ_انتقال_انزلاق_مبدال(0.5, 0، 1),
                    أنشئ_انتقال_انزلاق_مبدال(0.5, 0، 0)
                )؛
                مسار("^/one") = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                    ترويسة.حدث_الدليل(0)؛
                    أرجع عـارض_صور()؛
                }؛
                مسار("^/two$") = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                    ترويسة.حدث_الدليل(1)؛
                    أرجع مـشهد_عداد()؛
                }؛
                مسار("^/three") = مغلفة(حـمولة_مسار): سـندنا[ودجـة] {
                    ترويسة.حدث_الدليل(2)؛
                    أرجع مـشهد_نصي()؛
                }؛
            }
        })؛
    })؛

    نفذ_حلقة_معالجة_الأحداث()؛
}


طـرفية.اطبع("تشغيل الخادم على المنفذ 8010...\nURL: http://localhost:8010/\n")؛
شغل_الخادم({ "listening_ports"، "8010"، "static_file_max_age"، "0" })؛

