اشمل "مـتم/طـرفية"؛
اشمل "مـتم/مـصفوفة"؛
اشمل "مـحا"؛
مـحا.اشمل_ملف("Alusus/WebPlatform"، "مـنصة_ويب.أسس")؛

استخدم مـتم؛
استخدم مـنصة_ويب؛

//==============================================================================
// الخادم

@مسار_الموارد عرف مسار_الموارد: "Assets/"؛

//==============================================================================
// الواجهة

@منفذ_مرئي["/"]
@عنوان["مثال منصة الويب - اختبار الفجوة"]
دالة الرئيسية {
    // بناء المشهد
    نـافذة.النموذج.الطراز.{
        الحشوة = مـسافة4.نقاط(20)؛
        الهامش = مـسافة4.نقاط(0)؛
    }؛
    نـافذة.النموذج.حدد_المشهد(صـندوق({}).{
        الطراز.{
            الإظهار = إظـهار._مرن_؛
            النسق = نـسق._عمود_؛
            الفجوة = مـسافة.نقاط(15)؛
        }؛
        أضف_فروع({
            كـتابة(نـص("اختبار خاصية الفجوة")).{
                الطراز.{
                    حجم_الخط = مـسافة.نقاط(24.0)؛
                    سمك_الخط = 700؛
                    الهامش = مـسافة4.نقاط(0، 0، 20، 0)؛
                }؛
            }،

            كـتابة(نـص("هذه عناصر في صندوق مع فجوة:")).{
                الطراز.{
                    حجم_الخط = مـسافة.نقاط(16.0)؛
                }؛
            }،

            // صندوق مع فجوة للاختبار
            صـندوق({}).{
                الطراز.{
                    الإظهار = إظـهار._مرن_؛
                    النسق = نـسق._سطر_؛
                    الفجوة = مـسافة.نقاط(10)؛
                    الحشوة = مـسافة4.نقاط(10)؛
                    الخلفية = خـلفية(لـون("f0f0f0"))؛
                }؛
                أضف_فروع({
                    صـندوق({}).{
                        الطراز.{
                            العرض = مـسافة.نقاط(50)؛
                            الطول = مـسافة.نقاط(50)؛
                            الخلفية = خـلفية(لـون("ff6b6b"))؛
                        }؛
                    }،
                    صـندوق({}).{
                        الطراز.{
                            العرض = مـسافة.نقاط(50)؛
                            الطول = مـسافة.نقاط(50)؛
                            الخلفية = خـلفية(لـون("4ecdc4"))؛
                        }؛
                    }،
                    صـندوق({}).{
                        الطراز.{
                            العرض = مـسافة.نقاط(50)؛
                            الطول = مـسافة.نقاط(50)؛
                            الخلفية = خـلفية(لـون("45b7d1"))؛
                        }؛
                    }
                })؛
            }،

            كـتابة(نـص("الفجوة بين المربعات أعلاه هي 10 نقطة")).{
                الطراز.{
                    حجم_الخط = مـسافة.نقاط(14.0)؛
                    الهامش = مـسافة4.نقاط(10، 0، 0، 0)؛
                }؛
            }
        })؛
    })؛

    نفذ_حلقة_معالجة_الأحداث()؛
}

دالة ابدأ_الخادم() {
    طـرفية.اطبع("تشغيل الخادم على المنفذ 8010...\nURL: http://localhost:8010/\n")؛
    ابن_وشغل_الخادم(مـصفوفة[مـؤشر_محارف]({ "listening_ports"، "8010"، "static_file_max_age"، "0" }))؛
}

ابدأ_الخادم()؛
